<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Ejecto para que salga los iconos de la barra de notificaciones en negro y no en blanco-->
        <item name="android:windowLightStatusBar">true</item>


        <!--Efecto material design para barra de estado, al abrir la navigation -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>
    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">80dp</item><!-- menu item height-->
    </style>
</resources>
